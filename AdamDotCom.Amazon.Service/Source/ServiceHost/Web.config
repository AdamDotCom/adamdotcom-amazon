<?xml version="1.0"?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="AdamDotCom.Amazon.Service.AmazonService" behaviorConfiguration="Default">
        <endpoint address="" binding="webHttpBinding" contract="AdamDotCom.Amazon.Service.IAmazon" behaviorConfiguration="Default" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="Default">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="Default">
          <webHttpWithExceptions />
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <extensions>
      <behaviorExtensions>
        <add name="webHttpWithExceptions" type="AdamDotCom.Amazon.Service.Utilities.WebHttpWithExceptionsElement, AdamDotCom.Amazon.Service, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"/>
      </behaviorExtensions>
    </extensions>
  </system.serviceModel>
  <system.web>
    <customErrors mode="Off"/>
    <compilation debug="true">
      <buildProviders>
        <add extension=".svc" type="System.ServiceModel.Activation.ServiceBuildProvider, System.ServiceModel, Version=3.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"/>
      </buildProviders>
    </compilation>
  </system.web>
</configuration>